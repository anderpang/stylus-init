
@import "./stylus-init/init.styl";
@import "./stylus-init/reset.styl";

.nav{
    @extend .n;
    height:$nav-height;
    border:1px solid;
}

.header >>> .swiper-content {
   background:red;
   font: 1em/1.8 $fonts;
   bgc:blue;
}

for $n in 1...3{
    li:nth-child({$n}){
        width:5%;
        
        border:unit(@width*$n,"em") solid;
    }
}

.border{
    display:inline-flex;
    flex:5.5;
    border-radius:5px;
    box-shadow: 1px 2px 5px inset #f00,2px 3px 10px blue;
    transform:translate(100px,50px) rotate(45deg);
    bgl:to right,#f00,#FFF;
    background-color:red;
}
.border-1{
    display:flex;
    flex:1;
    align-items:center;
    //background:#FFFF00 linear-gradient(to right,red,blue) no-repeat;
}
